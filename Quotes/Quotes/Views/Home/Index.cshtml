@{
    ViewBag.Title = "Get a Quote";
}
<div class="container mx-auto">
    <div class="row">
        <div class="card col-sm-8 col-md-6 col-lg-4 mx-auto shadow">
            <div class="card-header text-center">
                <h3 class="m-0">Answer these questions to receive a quote for car insurance.</h3>
                <br />
            </div>
            <div class="card-body">
                @using (Html.BeginForm("CarQuote", "Home", FormMethod.Post))
                {
                    <div class="row">
                        <div class="form-group col-md-12 mb-3 mx-auto">
                            <input name="FirstName" type="text" class="form-control" placeholder="First Name" required />
                            <input name="LastName" type="text" class="form-control" placeholder="Last Name" required/>
                            <input name="EmailAddress" type="email" class="form-control" placeholder="Email Address" required/>
                        </div>
                        <div class="form-group col-md-12">
                            Date of Birth
                            <input name="DOB" type="date" class="form-control" placeholder="Date of Birth" required/>
                        </div>
                        <div class="form-group col-md-12">
                            <input name="CarYear" type="number" class="form-control" placeholder="Car Year" required/>
                            <input name="CarMake" type="text" class="form-control" placeholder="Car Make" required/>
                            <input name="CarModel" type="text" class="form-control" placeholder="Car Model" required/>
                        </div>
                        <div class="form-check col-md-12">
                            Have you ever had a DUI? <br />
                            No <input name = "DUI" type = "radio"s class="form-check-input" value="false" checked />
                            Yes<input name="DUI" type="radio" class="form-check-input" value="true" />
                        </div>
                        <div class="form-group col-md-12">
                            Number of Speeding Tickets
                            <input name= "NumberOfSpeedingTickets" type= "number" class="form-control" required/>
                        </div>
                        <div class="form-check col-md-12">
                            Would you like full coverage or liability? <br />
                            Full Coverage<input name= "CoverageType" type= "radio" class="form-check-input" value="full" checked />
                            Liability<input name="CoverageType" type="radio" class="form-check-input" value="liability" />
                        </div>
                    </div>
                    <br />
                    <button type = "submit" class="btn btn-block btn-primary btn-sm">Submit</button>
                }
            </div>
        </div>
    </div>
</div>
