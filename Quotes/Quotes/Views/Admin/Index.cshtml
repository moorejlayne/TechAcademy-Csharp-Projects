@using Quotes.ViewModels
@model List<CarQuoteVm>

<div class="container">
    <h2>Car Quotes</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Date of Quote</th>
                <th scope="col">Quote</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email Address</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Car Year</th>
                <th scope="col">Car Make</th>
                <th scope="col">Car Model</th>
                <th scope="col">DUI?</th>
                <th scope="col">Speeding Tickets</th>
                <th scope="col">Coverage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quote in Model)
            {
            <tr>
                <td>@quote.DateOfQuote</td>
                <td>$@quote.Quote</td>
                <td>@quote.FirstName</td>
                <td>@quote.LastName</td>
                <td>@quote.EmailAddress</td>
                <td>@quote.DateOfBirth</td>
                <td>@quote.CarYear</td>
                <td>@quote.CarMake</td>
                <td>@quote.CarModel</td>
                <td>@quote.DUI</td>
                <td>@quote.NumberOfSpeedingTickets</td>
                <td>@quote.CoverageType</td>
            </tr>
            }
        </tbody>
    </table>
</div>


